{% extends 'base.html.twig' %}

{% block title %}New Basket
{% endblock %}

{% block body %}
	<div style="text-align:center">
		<h2>Votre panier<h2></div>
			<div class="row">
				<div class="col-md-9">
					<form method="POST" action="{{ path('basket_all_delete')}}" onsubmit="return confirm('Voulez vous vraiment vider le panier?');">
						<input type="hidden" name="_method" value="POST">
						<button class="btn">
							vider le panier
						</button>
					</form>
					{% for basket in baskets %}
						<div class="card p-1 mb-1">
							<div class="row card-body">
								<div class="col-md-2">
									<img style="width:100%;height:100px" src="/images/products/{{basket.product.picture.name}}">
								</div>
								<div class="col-md-9">
									<a href="#">{{ basket.product.name}}</a>

									<div>
										prix :
										<span>{{basket.product.price}}
											euros  x
											{{basket.quantity}}
											=
											{{basket.price}}
											euros</span>
									</div>

								</div>
								<div class="col-md-1">
									{{ include('basket/_delete_form.html.twig') }}</div>
							</div>
						</div>


					{% else %}

						<div>Pas de produits selectionn√©s</div>

					{% endfor %}

				</div>
				<div class="col-md-3">
					<div class="border border-dark rounded p-1">
						<div>
							<div>Nombre d'articles :{{nbrArticle}}
							</div>
							<div>Total :
								<b>{{total}}
									euros</b>
							</div>
						</div>
						<div>

							{{ form_start(form) }}
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
