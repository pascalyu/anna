{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-2">
			<div class="border card border-dark mt-3 p-1">
				{{ form_start(form) }}
				<button type="button" class="btn">
					<a href='{{path('home')}}'>
						<i class="fas fa-sync"></i>
					</a>
				</button>
				{{ form_widget(form) }}

				{{ form_end(form) }}
			</div>
		</div>
		<div class="row  col-md-10">
			{% for product in products %}
				<div class="col-md-3 mt-3 ">
					<div class="card ">
						<div class="card-header">
							<span>
								{{product.name}}
							</span>
							<span style="float:right">{{product.price}}
								â‚¬</span>
						</div>
						<div class="card-body" style="">
							<div style="text-align:center">
								<img src="images/products/{{product.picture.name}}" style="max-width:100%;height:140px"/>
							</div>
							<div>
								{{product.description}}</div>
						</div>
						<a href="{{path('product_custom_show',{'id': product.id})}}" class="card-footer">Voir le produit</a>
					</div>
				</div>
			{% endfor %}
		</div>


	</div>
{% endblock %}
