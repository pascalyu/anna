{% extends 'base.html.twig' %}

{% block title %}New Product
{% endblock %}

{% block body %}
	<h1>Create new Product</h1>

	{{ form_start(form) }}

	{{ form_row(form.name) }}
	{{ form_row(form.description) }}
	{{ form_row(form.category) }}
	{{ form_row(form.price) }}
	{{ form_row(form.quantity) }}
	<div class="border border-dark mb-5 p-3">
        <h1>Images du produit</h1>
		<div class="pictures" data-prototype="{{ form_widget(form.pictures.vars.prototype)|e('html_attr') }}"></div>
	</div>
	<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>

	{{ form_end(form) }}


	<a href="{{ path('product_index') }}">back to list</a>
{% endblock %}
